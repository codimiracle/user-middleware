<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codimiracle.web.middleware.user.mapper.AuthorityMapper">
    <resultMap id="PersistentResultMap" type="com.codimiracle.web.middleware.user.pojo.po.Authority">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="permission" property="permission"/>
    </resultMap>

    <resultMap id="ValueResultMap" type="com.codimiracle.web.middleware.user.pojo.vo.AuthorityVO">
        <id column="authority_id" property="id"/>
        <result column="authority_name" property="name"/>
        <result column="authority_description" property="description"/>
        <result column="authority_permission" property="permission"/>
    </resultMap>

</mapper>